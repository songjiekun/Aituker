<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.greenumbrellastudio.android.aituker.topic.TopicActivity">

    <com.greenumbrellastudio.android.aituker.view.TopicPreviewImageView
        android:id="@+id/featureImageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/pict"/>

    <com.greenumbrellastudio.android.aituker.view.BounceScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="always">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/titleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textSize="21dip"
                android:background="@android:color/transparent"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:text="测试标题"/>

            <TextView
                android:layout_below="@id/titleTextView"
                android:layout_width="match_parent"
                android:layout_height="600dp"
                android:layout_margin="20dp"
                android:textSize="17dip"
                android:background="#C8E1F2"
                android:textColor="@android:color/black"
                android:gravity="left"
                android:text="测试内容测试内容测试内容测试内容测试内容测试内容
                测试内容测试内容测试内容测试内容测试内容测试内容
                测试内容测试内容测试内容测试内容测试内容测试内容测试内容测试内容测试内容测试内容测试内容测试内容测试内容"/>

        </RelativeLayout>

    </com.greenumbrellastudio.android.aituker.view.BounceScrollView>

</RelativeLayout>
